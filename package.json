{
  "name": "almy",
  "version": "2.0.0",
  "description": "Store for a simple state management",
  "main": "dist/almy.cjs.js",
  "module": "dist/almy.esm.js",
  "unpkg": "dist/almy.umd.js",
  "scripts": {
    "build": "rollup -c",
    "test": "jest --forceExit --detectOpenHandles --coverage",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "pretest": "prettier --write almy.js __test__/**/*.js && prettier --check almy.js __test__/**/*.js && npm run build",
    "prepublishOnly": "npm t"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomas2387/almy.git"
  },
  "files": [
    "dist/*"
  ],
  "keywords": [
    "store",
    "state",
    "manager",
    "js",
    "javascript"
  ],
  "author": "@tomas2387",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tomas2387/almy/issues"
  },
  "homepage": "https://github.com/tomas2387/almy#readme",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "rollup": "^4.46.2"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    },
    "testPathIgnorePatterns": [
      "dist/"
    ],
    "restoreMocks": true
  }
}
